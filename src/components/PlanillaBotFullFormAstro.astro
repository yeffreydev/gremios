---
import {
    BASIC_FEATURES,
    ENTRY_TIMES,
    SHIELDS,
    ILLUSORY_RESOURCES,
    COMMON_RESOURCES,
    EXITS_1_8,
    EXITS_WITH_LABEL,
    LEVELS_1_6,
    LEVELS_1_5,
    FORTRESS_TROOP_TYPES,
    HEROES,
    CONSTRUCTION_PRIORITIES,
    RESEARCH_TYPES,
    ARMY_TYPES,
    TRAPS,
    PACTS,
    FAMILIARS,
    BANK_TYPES,
    REST_SCHEDULES,
    DOWNLOAD_FILES,
} from "../types";
---

<div>
    <!-- Title -->
    <div class="mb-6">
        <h1 class="text-2xl sm:text-3xl font-bold text-white mb-2">
            PLANILLA BOT FULL
        </h1>
        <p class="text-sm text-white/60">
            Complete todos los campos para configurar su bot
        </p>
    </div>

    <form id="bot-full-form">
        <div class="space-y-8">
            <!-- 1. NOMBRE DE LA CUENTA -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    NOMBRE DE LA CUENTA
                </h3>
                <input
                    type="text"
                    name="accountName"
                    placeholder="Ingrese el nombre de la cuenta"
                    class="w-full px-4 py-2 rounded-lg bg-white/5 border border-white/10 text-white placeholder-white/40 focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-500/50"
                />
            </div>

            <!-- 2. BÁSICO - TILDAR LO QUE SÍ HACE -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    BÁSICO - TILDAR LO QUE SÍ HACE
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        BASIC_FEATURES.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="basicFeatures"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 3. TIEMPO DE ENTRADA A CUENTA -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    TIEMPO DE ENTRADA A CUENTA
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        ENTRY_TIMES.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="entryTime"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 4. ESCUDOS -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    ESCUDOS
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        SHIELDS.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="shields"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 5. ANTIEXPLORER -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    ANTIEXPLORER
                </h3>
                <div class="flex gap-4">
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="antiExplorer"
                            value="yes"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">YES</span>
                    </label>
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="antiExplorer"
                            value="no"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">NO</span>
                    </label>
                </div>
            </div>

            <!-- 6. SUMINISTRA A ALGÚN BANCO -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    SUMINISTRA A ALGÚN BANCO
                </h3>
                <div class="flex gap-4">
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="supplyToBank"
                            value="yes"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">YES</span>
                    </label>
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="supplyToBank"
                            value="no"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">NO</span>
                    </label>
                </div>
            </div>

            <!-- 7. NOMBRE DONDE MANDA LOS RSS -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    NOMBRE DONDE MANDA LOS RSS
                </h3>
                <input
                    type="text"
                    name="rssDestination"
                    placeholder="Ingrese el nombre"
                    class="w-full px-4 py-2 rounded-lg bg-white/5 border border-white/10 text-white placeholder-white/40 focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-500/50"
                />
            </div>

            <!-- 8. REINO ILUSORIO - RECURSOS -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    REINO ILUSORIO - RECURSOS
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        ILLUSORY_RESOURCES.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="illusoryResources"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 9. REINO ILUSORIO - SALIDAS -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    REINO ILUSORIO - CUÁNTAS SALIDAS A RECOLECTAR (1-8)
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        EXITS_1_8.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="illusoryExits"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 10. CACERÍA REINO ILUSORIO -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    CACERÍA REINO ILUSORIO
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        LEVELS_1_5.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="illusoryHunting"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 11. RECOLECCIÓN REINO COMÚN - RECURSOS -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    RECOLECCIÓN REINO COMÚN - RECURSOS
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        COMMON_RESOURCES.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="commonResources"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 12. RECOLECCIÓN REINO COMÚN - SALIDAS -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    RECOLECCIÓN REINO COMÚN - CUÁNTAS SALIDAS (1-8)
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        EXITS_WITH_LABEL.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="commonExits"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 13. FORTALEZAS - NIVEL -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    FORTALEZAS - NIVEL
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        LEVELS_1_6.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="fortressLevel"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 14. FORTALEZAS - MARCHAS -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    FORTALEZAS - CUÁNTAS MARCHAS (1-8)
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        EXITS_1_8.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="fortressMarches"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 15. FORTALEZAS - COMO MANDA -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    FORTALEZAS - COMO MANDA
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        FORTRESS_TROOP_TYPES.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="fortressTroopType"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 16. INTERCAMBIO DE BARCO -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    INTERCAMBIO DE BARCO
                </h3>
                <div class="flex gap-4">
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="shipExchange"
                            value="yes"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">YES</span>
                    </label>
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="shipExchange"
                            value="no"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">NO</span>
                    </label>
                </div>
            </div>

            <!-- 17. HÉROES A MEJORAR -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    HÉROES A MEJORAR
                </h3>
                <select
                    name="heroToImprove"
                    class="w-full px-4 py-2 rounded-lg bg-white/5 border border-white/10 text-white focus:outline-none focus:border-purple-500 focus:ring-2 focus:ring-purple-500/50"
                >
                    <option value="">Seleccionar...</option>
                    {
                        HEROES.map((option) => (
                            <option value={option} class="bg-gray-800">
                                {option}
                            </option>
                        ))
                    }
                </select>
            </div>

            <!-- 18. HACE COLISEO -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    HACE COLISEO
                </h3>
                <div class="flex gap-4">
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="coliseum"
                            value="yes"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">YES</span>
                    </label>
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="coliseum"
                            value="no"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">NO</span>
                    </label>
                </div>
            </div>

            <!-- 19. HACE SPAM -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    HACE SPAM
                </h3>
                <div class="flex gap-4">
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="spam"
                            value="yes"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">YES</span>
                    </label>
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="spam"
                            value="no"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">NO</span>
                    </label>
                </div>
            </div>

            <!-- 20. CONSTRUCCIÓN -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    CONSTRUCCIÓN
                </h3>
                <div class="flex gap-4">
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="construction"
                            value="yes"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">YES</span>
                    </label>
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="construction"
                            value="no"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">NO</span>
                    </label>
                </div>
            </div>

            <!-- 21. QUE CONSTRUYE -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    QUE CONSTRUYE
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        CONSTRUCTION_PRIORITIES.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="constructionPriority"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 22. INVESTIGACIÓN -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    INVESTIGACIÓN
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        RESEARCH_TYPES.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="research"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 23. EJÉRCITO -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    EJÉRCITO
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        ARMY_TYPES.map((option) => (
                            <label class="flex items-start gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors">
                                <input
                                    type="checkbox"
                                    name="army"
                                    value={option}
                                    class="mt-1 w-4 h-4 rounded border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                                />
                                <span class="text-sm text-white/80">
                                    {option}
                                </span>
                            </label>
                        ))
                    }
                </div>
            </div>

            <!-- 24. HACE EQUIPO LUMINARIO -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    HACE EQUIPO LUMINARIO
                </h3>
                <div class="flex gap-4">
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="luminarioEquipment"
                            value="yes"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">YES</span>
                    </label>
                    <label
                        class="flex items-center gap-2 p-2 rounded-lg hover:bg-white/5 cursor-pointer transition-colors"
                    >
                        <input
                            type="radio"
                            name="luminarioEquipment"
                            value="no"
                            class="w-4 h-4 border-white/20 bg-white/5 text-purple-500 focus:ring-2 focus:ring-purple-500"
                        />
                        <span class="text-sm text-white/80">NO</span>
                    </label>
                </div>
            </div>

            <!-- 25. HACE TRAMPAS -->
            <div class="mb-6">
                <h3
                    class="text-base sm:text-lg font-semibold mb-3 text-white/90"
                >
                    HACE TRAMPAS
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                    {
                        TRAPS.map((option) => (
